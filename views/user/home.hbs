<section class="contact" id="contact">
 <h1 class="title">contact us</h1>
   <div class="row">

      <div class="image">
         <img src="/images/contact-img.svg" alt="">
      </div>

      <form id="contact-us">
         <h3>tell us something!</h3>
         <input type="text" name="name"  id="name" required placeholder="enter your name"  class="box">
         <input type="tel" name="number" id="number" required minlength="10" maxlength="10" placeholder="enter your number"  class="box" >
         <input type="email" name="email" id="email" required placeholder="enter your email" class="box">
         <textarea name="msg" placeholder="enter your message" id="message" required class="box" cols="30" rows="10" maxlength="500"></textarea>
         <input type="submit" value="send message" class="btn" name="send">
      </form>

   </div>

</section>


<script>
   
$("#contact-us").submit((e)=>{
e.preventDefault()
$.ajax({
   url:'/contact-us',
   data:$("#contact-us").serialize(),
    method:"post",
   success:(response)=>{
      if(response.status){
         window.alert('thankyou for your message ')
      }
   }
})
})


