{{#if products}}

<div class="heading">
   <h3>my wishlist</h3>
   <p><a href="/">home </a></p>
</div>





<section class="products">
   <div class="box-container">

{{#each products}}
      <div class="box">
          <button class="fa fa-close" onclick="removeWish('{{this._id}}','{{product._id}}')"></button>
           <button class="fas fa-shopping-cart"  onclick="addWishCart('{{product._id}}');" ></button> 
         
         <img src="{{product.url}}" alt="">
         <div class="name">{{product.Name}}</div>
         <div class="flex">
            <div class="price"><span>â‚¹</span>{{product.Price}}</div>
       
         </div>
         
      </div>
      {{/each}}
   </div>
     

</section>

{{else}}

<div class="heading">
   <h3>You have no wishlist</h3>
   <p><a href="/">home </a></p>
</div>

{{/if}}
