

<section class="form-container">

   <form action="/signup" method="post" onsubmit="return validate()" name="form" id="form">
      <h3>register now</h3>
      <input type="text" required  name="Name" placeholder="enter your name" class="box" >
      <input type="email" required  name="Email" placeholder="enter your email" class="box" >
      <input type="tel" minlength="10" maxlength="10" placeholder="enter your number" required class="box" name="Number">
      <input type="password" minlength="5" maxlength="8" required  name="Password" placeholder="enter your password" class="box" >
      
      <input type="submit"  class="btn">
      <p>already have an account? <a href="/login">login now</a></p>
   </form>

</section>

















