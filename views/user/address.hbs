

<section class="form-container">

   <form action="/addorUpdate-address" method="post">
      <h3>your address</h3>
     
     {{#if getAddress}}
      <input type="text" maxlength="15" placeholder="{{getAddress.street}}" required class="box" name="street">
      <input type="text" maxlength="15" placeholder="{{getAddress.city}}" required class="box" name="city">
       <input type="text" maxlength="15" placeholder="{{getAddress.district}}" required class="box" name="district">
      <input type="text" maxlength="15" placeholder="{{getAddress.state}}" required class="box" name="state">
      <input type="text" maxlength="10" placeholder="{{getAddress.country}}" required class="box" name="country">
      <input type="tel" maxlength="6" minlength="6"  placeholder="{{getAddress.pincode}}" required class="box" name="pincode">
     {{else}}

     <input type="text" maxlength="15" placeholder="area name" required class="box" name="street">
      <input type="text" maxlength="15" placeholder="city name" required class="box" name="city">
       <input type="text" maxlength="15" placeholder="district name" required class="box" name="district">
      <input type="text" maxlength="15" placeholder="state name" required class="box" name="state">
      <input type="text" maxlength="10" placeholder="country name" required class="box" name="country">
      <input type="tel" maxlength="6" minlength="6"  placeholder="pin code" required class="box" name="pincode">

     {{/if}}

      <button type="submit" name="submit" class="btn">save address</button>
   </form>

</section>




















