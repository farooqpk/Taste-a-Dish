

{{#if orders}}

<div class="heading">
   <h3>your orders</h3>
   <p><a href="/">home </a> <span> / orders</span></p>
</div>

<section class="orders">

  

   <div class="box-container">

      {{#each orders}}

      <div class="box">
         <p> placed on : <span>{{this.date}}</span> </p>
         <p> name : <span>{{this.name}}</span> </p>
         <p> number : <span>{{this.deliveryDetails.mobile}}</span> </p>
         <p> total price : <span>â‚¹{{this.totalPrice}}</span> </p>
         <p> payment method : <span>{{this.paymentMethod}}</span> </p>
         <p> order status : <span>{{this.status}}</span> </p>
           <p> street : <span>{{this.deliveryDetails.street}}</span> </p>
           <p> city : <span>{{this.deliveryDetails.city}}</span> </p>
             <p> district : <span>{{this.deliveryDetails.district}}</span> </p>
             <p> state : <span>{{this.deliveryDetails.state}}</span> </p>
          <p> country : <span>{{this.deliveryDetails.country}}</span> </p>
         <p> pincode : <span>{{this.deliveryDetails.pincode}}</span> </p>
         
          <a href="/ordered-product/{{this._id}}" class="butn" >view items</a>
          <br>
           <a href="/invoice/{{this._id}}" class="btn" >invoice</a> 
           
          <br>
         <button class="delete-btn" onclick="cancelOrder('{{this._id}}')">cancel</button>
           
      </div>

    {{/each}}

   </div>

</section>


{{else}}


<div class="heading">
   <h3>You have no orders</h3>
   <p><a href="/">home </a></p>
</div>


{{/if}}
















