<section class="mt-5 " style="margin-top: 6rem !important; ">
  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <h2 class="text-center fw-bold" style="font-family: Georgia, 'Times New Roman', Times, serif;">Edit category
        </h2>
        <form action="/admin/edit-category/{{category._id}}" enctype="multipart/form-data" method="post">
          <label style="" for="">Category</label>
          <input type="text" name="cat_name" id="cat_name" value="{{category.cat_name}}" class="form-control" />

          <input type="text" name="publicId" value="{{category.publicId}}" hidden>

          <label for="">Image Upload</label>
          <img src="{{category.url}}" alt="" style="width: 100px; height: auto;" id="imgView" class="pt-3">
          <input type="file" name="Image" id="image" class="form-control" onchange="viewImage(event)">

          <button type="submit" class="btn btn-success mt-4">Save</button>
        </form>
      </div>

    </div>
  </div>
</section>


<style>
  label {
    font-weight: bolder !important;
  }
</style>

<script>
  function viewImage(event) {
    document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
  }
</script>