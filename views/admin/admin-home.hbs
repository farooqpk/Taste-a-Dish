<div class="bg-light" style="margin-top: 6rem;">


    <main class="">
        <div class="container px-4 ">

            <h1 class="">Admin Panel</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>

            <section>
                <div class="row">
                    <div class="col-xl-3 col-md-6">
                        <div class="card bg-primary text-white mb-4">
                            <div class="card-body">Primary Card</div>
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <a class="small text-white stretched-link" href="#">View Details</a>
                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card bg-warning text-white mb-4">
                            <div class="card-body">Warning Card</div>
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <a class="small text-white stretched-link" href="#">View Details</a>
                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card bg-success text-white mb-4">
                            <div class="card-body">Success Card</div>
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <a class="small text-white stretched-link" href="#">View Details</a>
                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card bg-danger text-white mb-4">
                            <div class="card-body">Danger Card</div>
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <a class="small text-white stretched-link" href="#">View Details</a>
                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="row mt-5">
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-area me-1"></i>
                            Area Chart Example
                        </div>
                        <div class="card-body"><canvas id="myAreaChart" width="100%" height="40"></canvas></div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-bar me-1"></i>
                            Bar Chart Example
                        </div>
                        <div class="card-body"><canvas id="myBarChart" width="100%" height="40"></canvas></div>
                    </div>
                </div>
            </section>


            <div class="card mb-4 mt-5">
                <div class="card-header text-center fw-bold"
                    style="font-size:1.8em; font-family: Georgia, 'Times New Roman', Times, serif;">

                    All Products
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>image</th>
                                <th scope="col">Name</th>
                                <th scope="col">Catogary</th>
                                <th scope="col">Description</th>
                                <th scope="col">Price</th>
                                <th scope="col">popular</th>
                            </tr>
                        </thead>

                        <tbody id="locate">
                            {{#each products}}

                            <tr>
                                <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg"
                                        alt=""></td>
                                <td>{{this.Name}}</td>
                                <td>{{this.Category}}</td>
                                <td>{{this.Description}}</td>
                                <td>{{this.Price}}</td>
                                <td>
                                    <select class="form-select bg-secondary btn-sm" aria-label="Default select example"
                                        onchange="popularDishes(value,'{{this._id}}')"
                                        style="width: fit-content; color: white;">
                                        <option selected>{{this.popular}}</option>
                                        <option value="true">true</option>
                                        <option value="false">false</option>


                                    </select>


                                </td>
                                <td> <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary btn-sm">Edit</a></td>
                                <td> <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you want to delete {{this.Name}}')">Delete</a>
                                </td>



                            </tr>

                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>





        </div>
    </main>


</div>


<script>

    function popularDishes(value, proId) {
       
        if (confirm('are you sure to change ?') == true) {
            $.ajax({
                url: '/admin/popular-dish/' + proId,
                method: 'post',
                data: { popular: value },
                success: (response) => {
                    alert('status changed')
                   

                }
            })
        } else {
            return false
        }

    }


</script>